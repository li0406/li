/* pages/about/about.ttss */
.out-scroll{
  height: 100vh
}
.border-bk{
  border-top:16rpx solid #F5F5F5;
  border-bottom:16rpx solid #F5F5F5;
  padding:20rpx;
}
.logo-info{
  text-align: center;
  padding:50rpx 0px;
}
.logo-info image{
  height: 100rpx;
  margin-bottom:30rpx;
}
.detail-header{
  display: flex;
  border-bottom:1px solid #f5f5f5
}
.header-item{
  flex-grow: 1;
  text-align: center;
  line-height: 68rpx;
  height: 68rpx;
}
.header-item text{
  display: inline-block;
  height: 68rpx;
}
.header-item .active{
  color:#ff5353;
  border-bottom:2px solid #ff5353;
}
.service-item{
  margin:40rpx;
}
.service-title{
  font-weight: bold;
  width:150rpx;
}
.service-text{
  color:#666;
  width:calc(100% - 180rpx);
}
.honor-box{
  width:95%;
  margin:20rpx auto;
  white-space: nowrap;
}
.honor-item{
  display: inline-block;
  width:45%;
  height: 200rpx;
}
.honor-item image{
  width:90%;
  border-radius: 10rpx;
  height: 100%;
}
.company-text{
  display: block;
  margin:20rpx 10rpx;
  line-height: 48rpx;
  color:#666;
  word-break: break-all;
  letter-spacing: 0.1em;
}