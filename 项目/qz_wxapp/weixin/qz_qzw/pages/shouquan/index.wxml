<!-- pages/shouquan/index.wxml-->
<template name="shouquan">
  <view style='width:100%;height:100%; background:rgba(0,0,0,0.7);position:fixed;top:0px;left:0px;display:table;z-index:9999' >
    <view style="display:table-cell;vertical-align:middle;text-align:center;">
      <view style="width:80.5%;margin:0px auto;background:#fff;border-radius:10rpx;overflow:hidden;padding-top:25rpx;color:#999">
        <text style='font-size:40rpx'>提示</text>
        <view style="margin:30rpx 0px;font-size:38rpx">
          是否允许获取用户信息 ? 
        </view>
        <view style="border-top:1px solid #E5E5E5;height:100rpx;overflow:hidden;">
          <view bindtap='cancelSq' style="float:left;width:50%;color:#999;line-height:100rpx;font-size:36rpx;color:#666">
            取消
          </view>
          <view style='float:left;width:50%'>
          <button  open-type='getUserInfo' bindtap='hideSq'  bindgetuserinfo="bindgetuserinfo" style='height:110rpx;line-height:110rpx;background:none;margin-top:-3rpx;font-size:38rpx;color:#3CC51F'>确定</button>
          </view>
        </view>
      </view>
    </view>
  </view>
</template>
