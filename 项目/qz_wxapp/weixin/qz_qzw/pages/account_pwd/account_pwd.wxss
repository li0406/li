/* pages/account_pwd/account_pwd.wxss */
.login{
    padding:70rpx 50rpx;
    box-sizing: border-box;
}
.login .tel-num{
    height:46rpx;
    font-size:48rpx;
    font-family:'PingFang SC';
    font-weight:bold;
    color:#333;
    line-height:45rpx;
}
.login .unregistered{
    height:25rpx;
    font-size:26rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:#666;
    line-height:45rpx;
    padding-top: 20rpx;
    letter-spacing:4rpx;
    box-sizing: border-box;
}

.login-tel{
    height: 70rpx;
    line-height: 70rpx;
    padding: 100rpx 50rpx 0;
    /* box-sizing: border-box; */
}
.phone-num{
   font-size: 32rpx;
    font-weight:500;
    color:#333;
    line-height:55rpx;
    float: left;
}
.phone{
    padding-left: 28rpx;
    box-sizing: border-box;
}
.fgx{
    height:1rpx;
    border-bottom:1rpx solid #E6E6E6;
    margin: 0 30rpx;
}
.login-code{
    width:100%;
    margin-top: 50rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 50rpx;
    position: relative;
    box-sizing: border-box;
}
.phone-code{
    font-size: 32rpx;
    font-weight:500;
    color:#333;
    line-height:55rpx;
    float: left;
}
.checkCode{
    padding-left: 28rpx;
}
.login-btn{
    padding-top: 70rpx;
    box-sizing: border-box;
}
.denglu{
   height: 88rpx;
    line-height: 88rpx;
    background: #ff5353;
    border-radius:44rpx;
    font-size:36rpx;
    font-weight:500;
    color:#fff;
    text-align: center;
    margin: 0 30rpx;
}
.accountPwd{
    height:28rpx;
    font-size:30rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:#666;
    line-height:45rpx;
    padding: 30rpx;
    box-sizing: border-box;
}
.wx-login{
    width:160rpx;
    height: auto;
    position: absolute;
    bottom: 50rpx;
    left: 0;
    right: 0;
    margin:auto;
}
.wx-text{
    font-size:26rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:#999;
    line-height:45rpx;
}
.wx-pic{
    width:100rpx;
    height: 100rpx;
    padding-top: 35rpx;
    margin: auto;
}
.wx-pic image{
    width:100%;
    height: 100%;
    vertical-align: middle;
}