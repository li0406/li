.fan-list {
  overflow: hidden;
}

.fan {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
}

.fan image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.fan .name {
  width: 580rpx;
  line-height: 120rpx;
  height: 100%;
  word-break: break-all;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
