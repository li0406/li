/* pages/user/user.wxml.wxss */
page{
  background:#f5f5f5;
}
.block {
  width: 100%;
  background: #f5f5f5;
  height: 20rpx;
}
.userinfo {
  height: 290rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background: #ccc;
}
.userinfo-nickname {
  /* color: #aaa; */
  font-size: 28rpx;
  color: #333;
}
.user_mark, .user_set,.user_kefu,.user_live{
  width: 100%;
  line-height: 100rpx;
  background: #fff;
  font-size: 34rpx;
  overflow: hidden;
  position: relative;
}
.use-new{
    position: absolute;
    width:40rpx;
    height: 17rpx;
    top:26rpx;
    margin-left: 10rpx;
}
.user_mark{
  border-bottom: 1px solid #f5f5f5; 
}
.user_mark text.fl, .user_set text.fl,.user_kefu text.fl,.user_live text.fl{
    margin-left: 20rpx;
}
.user_mark text.fr, .user_set text.fr,.user_live  text.fr{
    margin-right: 20rpx;
}

.fr{float: right;}
.fl{float: left;}

.user_kefu {
  background: #f5f5f5;
  font-size: 32rpx;
  color: #999999;
}
.faqi {
  background:#fff;
  padding:0 20rpx;
  font-size: 34rpx;
}
.faqi .fl {
    line-height: 80rpx;
}
.faqi contact-button {
  width:200rpx;
  height:80rpx;
  line-height:110rpx;
  text-align:center;
  background:transparent;
  opacity:0;
  position:relative;
  top:0x;
  left:380rpx;
}
.faqi .fr {
  width: 180rpx;
  color: #fff;
  text-align: center;
  background: rgb(35, 180, 255);
  margin-top:10px;
  font-size:28rpx;
  border-radius:10rpx;  
  padding:8rpx 0; 
  box-sizing:border-box;
}
.call {
  height: 100rpx;
  padding: 0 20rpx;
  background: #fff;
  border-bottom:1px solid #f5f5f5; 
  font-size: 34rpx;
}

.call .fl text {
  color: #ff5353;
  margin-left: 26rpx;
  line-height: 100rpx;
}
.call .fr {
  width: 180rpx;
  color: #fff;
  text-align: center;
  background: rgb(255, 198, 41);
  margin-top:30rpx;
  font-size:28rpx;
  border-radius:10rpx;
  padding:8rpx 0; 
  box-sizing:border-box;
}
.exit{
    width:48rpx;
    height: 48rpx;
    position: absolute;
    top:20rpx;
    right:25rpx;
}
.exit image{
    width:100%;
    height: 100%;
    vertical-align: middle;
}
.version{
  position: fixed;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}