.show{
   display:show;
}
.hide{
   display:none;
}
#myvideo{
  width: 50rpx;
  height: 50rpx;
  margin-top: 300rpx;
  margin-left: 320rpx;
}

.hb-bg {
  display: block;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.hb-bg .videoImg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 90%;
  height: 90%;
}
.hb-bg .play-btn{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 100rpx;
  height: 100rpx;
}