/* pages/sgdetail/sgdetail.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.l-mian {
  overflow-x: hidden;
  overflow-y: auto;
  box-sizing: border-box;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.contain {
  border-top: 20rpx solid #f3f3f3;
  border-bottom: 20rpx solid #f3f3f3;
  padding: 0 30rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.nobottom{
  border-bottom: 0;
}
.c-name {
  /* height: 80rpx; */
  line-height: 80rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(53, 53, 53, 1);
  display: flex;
  /* align-items: center; */
}

.c-name image {
  width: 32rpx;
  height: 30rpx;
  display: block;
  margin-right: 18rpx;
  float: left;
  margin-top: 26rpx;
}

.c-name .n-con {
  float: right;
  width: 90%;
}

.c-one {
  display: flex;
  font-size: 28rpx;
  color: #353535;
  justify-content: space-between;
  align-items: center;
  height: 72rpx;
}

.c-one text {
  color: #666;
}

.c-one .c-line {
  width: 48%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}

.c-xia {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}

/* 公司 */

.detail {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 38rpx 30rpx;
}

.d-logo {
  display: block;
  width: 200rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.detail .d-xq {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 58%;
}

.d-xq .x-title {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}

.d-xq .x-des {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 44rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}

/* nav */

.sify {
  box-sizing: border-box;
  border-bottom: 1rpx solid #d5d5d5;
  border-top:0rpx;
}

.scroll-view_H {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.sify .scroll-view_H .scroll-view-item_H {
  display: inline-block;
  min-width: 80rpx;
  padding: 0 30rpx;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}

.sify .scroll-view_H .scroll-view-item_H.active {
  color: #ff5353;
  font-weight: bold;
}

/* 詳情 */

.goods {
  padding: 0 30rpx;
  margin-bottom: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.goods .g-item {
  border-bottom: 1rpx solid #e5e5e5;
}

.g-top {
  display: flex;
  height: 128rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.g-top .t-left {
  width: 48%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
}

.g-top .t-left image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.g-top .t-left .name {
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}

.g-top .t-right {
  text-align: right;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(53, 53, 53, 1);
  line-height: 40rpx;
}

.g-top .t-right .time {
  color: #888;
}

.g-bottom .des {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
  margin-bottom: 18rpx;
}

.g-bottom .tu {
  display: flex;
  margin-bottom: 20rpx;
  justify-content: space-between;
  align-content: space-between;
  flex-wrap: wrap;
}

.g-bottom .tu image {
  border-radius: 6rpx;
}

.g-bottom .tu .tu1 {
  width: 100%;
  overflow: hidden;
}

.g-bottom .tu .tu2 {
  width: 48%;
  height: 334rpx;
  margin-bottom: 20rpx;
}

.g-bottom .tu .tu3 {
  width: 32%;
  height: 220rpx;
  margin-bottom: 12rpx;
}

.tu .clear {
  height: 0rpx !important;
  margin-bottom: 0rpx !important;
}

.g-bottom .edit {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 83, 83, 1);
}

.g-bottom .edit image {
  width: 30rpx;
  height: 30rpx;
}

.e-xiu, .e-san {
  display: flex;
  align-items: center;
  width: 100rpx;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.e-san {
  margin-left: 40rpx;
}

/* 固定底部 */

.handle {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  display: flex;
  width: 100%;
  height: 103rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgba(0, 0, 0, 0.1);
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.handle .add {
  color: #ff5353;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.handle .h-item {
  width: 48%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.handle .line {
  width: 2rpx;
  height: 60rpx;
  background: rgba(229, 229, 229, 1);
}

.nodata {
  width: 100%;
  height: 560rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.nodata image {
  width: 376rpx;
  height: 210rpx;
}

.btm-nomore {
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 200rpx;
}

.page-group-position {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background: #fff;
}

.swiper-wrap {
  height: 100%;
  width: 100%;
  text-align: center;
}

.swiper-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  left: 0px;
  top: 0px;
  z-index: 4;
}

.swan-swiper-item {
  display: table;
}

.swiper-item image {
  position: absolute;
  margin: auto;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}

.num-box {
  position: fixed;
  z-index: 5;
  width: 100%;
  text-align: center;
  bottom: 30rpx;
  left: 0px;
  color: #fff;
}
