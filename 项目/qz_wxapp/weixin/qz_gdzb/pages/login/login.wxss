

.contaner {
  width: 100%;
  height: 457rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.con-bac {
  width: 100%;
  height: 457rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.con-logo {
  width: 158rpx;
  height: 158rpx;
  display: block;
  margin-top: 102rpx;
}

.con-btn {
  width: 420rpx;
  height: 68rpx;
  margin-top: 40rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.con-btn image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.con-title {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(229, 97, 0, 1);
  margin-top: 20rpx;
}

.contaner {
  margin-bottom: 64rpx;
}

.mes {
  width: 60%;
  display: flex;
  margin-left: 216rpx;
  margin-bottom: 30rpx;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.mes .mes-icon {
  width: 14rpx;
  height: 14rpx;
  background: rgba(102, 102, 102, 1);
  border-radius: 50%;
  margin-right: 18rpx;
}

.form {
  font-size: 20rpx;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  width: 600rpx;
  margin: 0 auto;
  margin-top: 120rpx;
}

.form .item {
  margin-top: 20rpx;
  width: 600rpx;
  height: 80rpx;
  position: relative;
}

.form-btn {
  width: 598rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.form .allow {
  width: 600rpx;
  height: 80rpx;
  opacity: 0;
}

.form-title {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: -1;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 80rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
}
