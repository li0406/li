<!--pages/login/login.wxml-->
<view>
  <view wx:if="{{isHide}}" class='wran'>{{msg}}</view>
  <view class='logo'>
    <image src='../../img/logo.png'></image>
    <view>齐装后台管理系统</view>
  </view>
  <view class='user'>
    <input type='text' placeholder='账号' bindinput="user" value='{{user}}'></input>
  </view>
  <view class='password'>
    <input type='password' placeholder='密码' bindinput="password" value='{{password}}'></input>
  </view>
  <view class='login'>
    <button bindtap='login' data-user="{{user}}" data-password="{{password}}">登录</button>
  </view>
</view>
