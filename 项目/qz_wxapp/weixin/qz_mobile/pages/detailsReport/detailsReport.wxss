/* pages/addsReport/addsReport.wxss */

page {
  background: rgba(243, 243, 243, 1);
  width: 100%;
  box-sizing: border-box;
}

.info .li .input::-webkit-scrollbar {
  display: none;
}

.main {
  margin-bottom: 100rpx;
}

.red {
  color: #ff3b3b;
}

.green {
  color: #009900;
}

.info {
  background: #fff;
  padding-left: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}

.info.no-margin {
  margin-top: 0;
  border-top: 1px solid #eee;
}

.info .li {
  min-height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
  overflow: hidden;
}

.info .li.no-border {
  border-bottom: none;
}

.info .li input {
  width: 70%;
  float: left;
  text-align: right;
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 40rpx;
}

.info .li .round {
  width: 74%;
}

.info .li .input {
  width: 71%;
  float: left;
  text-align: right;
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 40rpx;
  white-space: nowrap;
  overflow-x: scroll;
}

.info .li .huikr {
  width: 67%;
}

.info .arrow {
  display: block;
  width: 14rpx;
  height: 25rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.info .li .fr60 {
  float: right;
  margin-right: 60rpx;
}

.info .li text {
  float: left;
}

.info .li text.blue{
  float: none;
  color: #0099ff;
}

.info .li-cs .cs {
  float: right;
  margin-right: 30px;
}

.info .li-hkr input {
  width: 67%;
}

.info .li-zhfs input {
  width: 59%;
}

.person-list>view {
  float: right;
  width: 60%;
  margin-right: 50rpx;
}

.person-list>view text {
  margin-right: 8rpx;
}

.person-list .nodata {
  text-align: right;
  margin-right: 30px;
}

/* 上传图片 */

.info .li.no-border {
  border-bottom: none;
}

.info .li.pb30 {
  padding-bottom: 30rpx;
}

.uploader-img {
  min-height: 100rpx;
}

.uploader-list {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.uploader-list .delete {
  position: absolute;
  top: 0;
  right: 0;
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.uploader-list .item {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.upAdd {
  float: left;
  width: 200rpx;
  height: 200rpx;
  background: #eee;
  text-align: center;
  font-size: 80px;
  color: #fff;
  line-height: 178rpx;
}

.bths {
  width: 100%;
  padding: 50rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-bottom: 50rpx;
}

.submit {
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2px solid #ff3b3b;
  float: left;
  border-radius: 10rpx;
  background: red;
  color: #fff;
}

.bths .sub-del {
  width: 20%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2px solid #ff6700;
  float: left;
  border-radius: 10rpx;
  background: #ff6700;
  color: #fff;
  margin-right: 20rpx;
}

.bths .sub-save {
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2px solid #ff3b3b;
  float: left;
  border-radius: 10rpx;
  background: red;
  color: #fff;
}

.info .exam_reason {
  border-bottom: 0;
}

.textarea {
  width: 90%;
  height: 260rpx !important;
  border-radius: 10rpx;
  padding: 20rpx;
  border: 1rpx #e6e6e6 solid;
  margin: 0rpx 0 30rpx;
  font-size: 24rpx;
  background: #f3f3f3;
}

/* 优化 */

.info .li:last-child {
  border-bottom: none;
}

.info .li .pb-peo {
  margin-left: 62rpx;
}

.next-info {
  border-top: 30rpx solid #f3f3f3;
  overflow: hidden;
}
.info .li textarea {
  width:650rpx;
  height:260rpx;
  line-height: 40rpx;
  background:rgba(243,243,243,1);
  border-radius:10rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
}

.next-area {
  padding-bottom: 50rpx;
}

.check-item {
  display: block;
  padding: 0 20rpx;
  background: #f3f3f3;
  border-radius: 10px;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  margin: 12px 0;
  margin-right: 20px;
  margin-bottom: 0;
}

.info .check-items {
  overflow: hidden;
  padding-bottom: 12px;
}

.info .li-zhfs {
  border-bottom: none;
}
