/*城市选择  */
.select-box {
  width: 100%;
  height: 500rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
  background: #fff;
  box-shadow: 0 0 5px 0px #65779c;
  display: block;
  transition: all .5s ease;
  -webkit-transition: all .5s ease;
}
.transtion-on{
  transform: translate(0%,0%);  
  -webkit-transform: translate(0%,0%);
}
.transtion-off{
  transform: translate(0%,110%);  
  -webkit-transform: translate(0%,110%);
} 
.select-box picker-view{
  width: 100%;
  height: 360rpx;
}
.select-box picker-view picker-view-column view{
  line-height: 72rpx;text-align:center;
}
.close,.ok {
  width: 120rpx;
  height: 90rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 90rpx;
  position: absolute;
  z-index: 11;
  color: #65779c;
}
.select-top {
  width: 100%;
  height: 90rpx;
  background: #fbf9fe;
}
.close {
  left: 0;
  top: 0;
}
.ok {
  right: 0;
  top: 0;
}
