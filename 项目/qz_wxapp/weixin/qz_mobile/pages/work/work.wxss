/**index.wxss**/
.clearfix:after {
  content: "";
  display: block;
  clear: both;
}
.card {
  margin: 20rpx 30rpx;
  width: 690rpx;
  height: 350rpx;
  position: relative;
}
.card .user {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
}
.card image {
  display: block;
  width: 100%;
  height: 100%;
}
.job {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.job .title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.job image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}
.job .style {
  float: left;
  width: 32%;
  height: 140rpx;
  text-align: center;
}
.job .style view {
  margin-top: 20rpx;
}
.my-job .title {
  background: #F3F3F3;
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
  height: 82rpx;
  line-height: 82rpx;
  padding-left: 30rpx;
}
.my-job .ul {
  padding: 30rpx;
}
.my-job .ul .li {
  height:86rpx;
  line-height: 86rpx;
  border-bottom: 1px solid rgba(229,229,229,1);
}
.my-job .ul .li view {
  float: left;
  font-size: 28rpx;
  color: #666;
}
.my-job .ul .li .time {
  width: 25%;
  text-align: left;
}
.my-job .ul .li .matter {
  color: #333;
  width: 50%;
  text-align: center;
}
.my-job .ul .li .blue {
  color: #1890FF;
}
.my-job .ul .li .status {
  width: 25%;
  text-align: right;
}
