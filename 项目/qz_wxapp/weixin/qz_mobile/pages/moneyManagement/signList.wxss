page {
  background: #f3f3f3;
}

.top-header {
  width: 100%;
  background: #f3f3f3;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  line-height: 2;
}
.top-header .red{
  color: red;
}

/* 主体 */
.con-scoll{
  margin-bottom: 30rpx;
}

.con {
  width: 100%;
  padding: 38rpx 30rpx;
  border-top: 20rpx solid #f3f3f3;
  box-sizing: border-box;
  background: #fff;
  overflow: hidden;
  font-size: 28rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
  position: relative;
}

.con .con-item {
  width: 50%;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
  color: #666;
  line-height: 2;
}

.con .name {
  width: 100%;
  display: flex;
  justify-items: center;
  position: relative;
}

.con .name .item-x {
  max-width: 400rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.con .status{
  position: absolute;
  right: 0;
  top: 16rpx;
}
.con .name image{
  margin-top: 16rpx;
  width: 40rpx;
  height: 40rpx;
  margin-left: 40rpx;
}
.con .name .red {
  height: 36rpx;
  line-height: 36rpx;
  padding: 2rpx 10rpx;
  margin-left: 26rpx;
  border-radius: 10rpx;
  color: red;
  font-size: 24rpx;
  border: 2rpx solid red;
}

.con .name .green {
  height: 36rpx;
  line-height: 36rpx;
  padding: 2rpx 10rpx;
  color: green;
  font-size: 24rpx;
  margin-left: 16rpx;
  border-radius: 10rpx;
  border: 2rpx solid green;
}
.con .con-num {
  width: 100%;
}
.con .con-num .red{
  color: red;
}
.con-btn {
  background: #fff;
  display: flex;
  justify-content: space-around;
}
.con-btn .btn{
  flex: 1;
  text-align: center;
  border-top: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
}

.page {
  width: 100%;
  height: 180rpx;
  padding: 0 155rpx;
  box-sizing: border-box;
  background: #f3f3f3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page .pre, .page .next {
  width: 134rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  background: rgba(255, 59, 59, 1);
  border: 2rpx solid rgba(255, 59, 59, 1);
  border-radius: 6rpx;
}

.page .active {
  background: #f7f7f7;
  border: 2rpx solid #dedede;
  color: #acacac;
}

.page .total {
  width: 134rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  margin: 0 50rpx;
}

.no-result {
  margin-top: 100rpx;
}

.no-result image {
  display: block;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}

.no-result view {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 50rpx;
}

.no-result button {
  width: 270rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(255, 59, 59, 1);
  border-radius: 8rpx;
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
  margin: 50rpx auto;
}
