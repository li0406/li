/* pages/addsReport/addsReport.wxss */

page {
  background: rgba(243, 243, 243, 1);
  width: 100%;
  box-sizing: border-box;
}

.info .li .input::-webkit-scrollbar {
  display: none;
}

.main {
  margin-bottom: 50rpx;
  position: relative;
}

.red {
  color: #ff3b3b;
}

.green {
  color: #009900;
}

.info {
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  padding-left: 30rpx;
}

.info.no-margin {
  margin-top: 0;
  border-top: 1px solid #eee;
}

.info .li {
  min-height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
}

.info .li.no-border {
  border-bottom: none;
}

.info .li input {
  width: 71%;
  float: left;
  text-align: right;
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 40rpx;
}
.info .li .round{
  width: 75%;
}

.info .li .input {
  width: 71%;
  float: left;
  text-align: right;
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 40rpx;
  white-space: nowrap;
  overflow-x: scroll;
}
.info .li .input text{
  float: none;
}

.info .li .huikr {
  width: 67%;
}

.info .arrow {
  display: block;
  width: 14rpx;
  height: 25rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.info .li .fr60 {
  float: right;
  margin-right: 60rpx;
}

.info .li text {
  float: left;
}
.info .li text.no-float{
  float: none;
}
.info .li text.red{
  color: red;
}
.info .li text.green{
  color: #009900;
}
.info .li-cs .cs {
  float: right;
  margin-right: 30px;
}

.info .li-hkr input {
  width: 67%;
}

.info .li-zhfs input {
  width: 71%;
}

.info .pb-ren input {
  width: 75%;
}

.li .person-list{
    width:72%;
    height: 84rpx;
    float: left;
}

.li .person-list>view{
    float: right;
    margin-left: 8rpx;
}

/* 上传图片 */

.info .li.no-border {
  border-bottom: none;
}

.info .li.pb30 {
  padding-bottom: 30rpx;
}

.uploader-img {
  min-height: 100rpx;
}

.uploader-list {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.uploader-list .delete {
  position: absolute;
  top: 0;
  right: 0;
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.uploader-list .item {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.upAdd {
  float: left;
  width: 200rpx;
  height: 200rpx;
  background: #eee;
  text-align: center;
  font-size: 80px;
  color: #fff;
  line-height: 178rpx;
}

.bths {
  width: 100%;
  padding: 50rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-bottom: 50rpx;
}

.submit {
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2px solid #ff3b3b;
  float: left;
  border-radius: 10rpx;
  background: red;
  color: #fff;
}

.bths .sub-del {
  width: 20%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2px solid #ff6700;
  float: left;
  border-radius: 10rpx;
  background: #ff6700;
  color: #fff;
  margin-right: 20rpx;
}

.bths .sub-save {
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2px solid #ff3b3b;
  float: left;
  border-radius: 10rpx;
  background: red;
  color: #fff;
}

.info .exam_reason {
  border-bottom: 0;
}

.textarea {
  width: 90%;
  height: 260rpx !important;
  border-radius: 10rpx;
  padding: 20rpx;
  border: 1rpx #e6e6e6 solid;
  margin: 0rpx 0 30rpx;
  font-size: 24rpx;
  background: #f3f3f3;
}

/* 弹框 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 1000;
  opacity: 0.5;
}

.modalDlg {
  width: 580rpx;
  height: 350rpx;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 1001;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.addno {
  height: 520rpx;
}

.p-group {
  width: 100%;
  height: 76rpx;
  box-sizing: border-box;
  padding: 0 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

radio .wx-radio-input {
  border-radius: 50%;
  width: 26rpx;
  height: 26rpx;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: #2facff;
  border-color: #2facff;
}

.modalDlg .title {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin: 40rpx;
}

.modalDlg .foot {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #e6e6e6;
  width: 100%;
  z-index: 9999;
  background: #fff;
}

.modalDlg .foot .item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #1890ff;
  width: 50%;
  height: 100%;
}

.modalDlg .foot .bit {
  color: #999;
  border-right: 1rpx solid #e6e6e6;
}

.addno .beizhu {
  width: 466rpx;
  height: 340rpx;
  font-size: 24rpx;
}

.addno .beizhu .bz-name {
  line-height: 50rpx;
}

.addno .beizhu .bz-text {
  width: 100%;
  height: 156rpx !important;
  background: rgba(243, 243, 243, 1);
  border-radius: 8px;
  padding: 10rpx;
  box-sizing: border-box;
  line-height: 30rpx;
  overflow: hidden;
}

.sign-logo {
  position: absolute;
  z-index: 99;
  width: 240rpx;
  height: 230rpx;
  top: 64rpx;
  right: 14rpx;
}

/* 优化 */

.info .li:last-child {
  border-bottom: none;
}

.next-info {
  border-top: 30rpx solid #f3f3f3;
  overflow: hidden;
}
.info .li textarea {
  width:650rpx;
  height:260rpx;
  line-height: 40rpx;
  background:rgba(243,243,243,1);
  border-radius:10rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
}

.next-area {
  padding-bottom: 50rpx;
}
.info .li text.blue{
  float: none;
  color: #0099ff;
}
.check-item {
  display: block;
  padding: 0 20rpx;
  background: #f3f3f3;
  border-radius: 10px;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  margin: 12px 0;
  margin-right: 20px;
  margin-bottom: 0;
}

.info .check-items {
  overflow: hidden;
  padding-bottom: 12px;
}

.info .li-zhfs {
  border-bottom: none;
}
