
<view class='mask' wx:if='{{show}}'>

  <view class='modal-content' style='height:{{height}}'>
    <view class="modal-title">{{title}}</view>
    <scroll-view scroll-y class='main-content'>
      <slot></slot>
    </scroll-view>
    <view class='modal-btn-wrapper'>
      <view class='cancel-btn' style='color:rgba(7,17,27,0.6)' bindtap='cancel'>{{cancelTitle}}</view>
      <view class='confirm-btn' style='color:#13b5f5' bindtap='confirm'>{{confirmTitle}}</view>
    </view>
  </view>

</view>


