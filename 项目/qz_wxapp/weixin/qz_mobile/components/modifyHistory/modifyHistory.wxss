/* components/modifyHistory.wxss */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 1000;
  opacity: 0.5;
}

.modal-dialog {
  width: 540rpx;
  height: 310rpx;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 1001;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.m-scroll-view{
  width: 550rpx;
  height: 700rpx;
}
.modal-dialog-history {
  width: 650rpx;
  height: 900rpx;
}

.m-item-text {
  width: 550rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #666;
}

.m-item-history {
  width: 550rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #666;
}

.m-item-history .blue {
  color: #0099ff;
}

.m-item-history .red {
  color: red;
}

.m-item-history .modify {
  margin: 0 10rpx;
}

.modal-dialog .m-title {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  height: 128rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-dialog .m-error {
  position: absolute;
  top: -24rpx;
  right: -24rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 1
}